{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next.js", // Display name for the configuration
  "compilerOptions": {
    "target": "es5", // Specifies the target ECMAScript version
    "lib": ["dom", "dom.iterable", "esnext"], // List of library files to be included in the compilation
    "allowJs": true, // Allow JavaScript files to be compiled
    "skipLibCheck": true, // Skip type checking of declaration files
    "strict": true, // Enable all strict type-checking options
    "noUncheckedIndexedAccess": true, // Ensure that every property access is checked
    "forceConsistentCasingInFileNames": true, // Ensure consistent casing in file names
    "noEmit": true, // Do not emit outputs
    "esModuleInterop": true, // Enable interoperability between CommonJS and ES Modules
    "module": "esnext", // Specify module code generation
    "moduleResolution": "node", // Specify module resolution strategy
    "resolveJsonModule": true, // Include modules imported with .json extension
    "isolatedModules": true, // Ensure each file is treated as a separate module
    "jsx": "preserve", // Specify JSX code generation
    "incremental": true, // Enable incremental compilation
    "types": [ // Specify type definitions to include
        "@cloudflare/workers-types/2023-07-01",
        "node"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"], // List of files to include in the compilation
  "exclude": ["node_modules"] // List of files to exclude from the compilation
}
