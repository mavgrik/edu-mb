{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "npm.packageManager": "pnpm",
  "cSpell.userWords": [
    "turbopack",
    "mavgrik",
    "shadcn",
    "mb",
    "matteohv",
    "nodenext"
  ],
  "cSpell.ignorePaths": [
    "pnpm-lock.yaml",
    "node_modules",
    "vscode-extension",
    ".git/{info,lfs,logs,refs,objects}/**",
    ".git/{index,*refs,*HEAD}",
    ".vscode",
    ".vscode-insiders"
  ],
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
	"files.associations": {
		"wrangler.json": "jsonc"
	}
}
